@model wangyou.Models.bk_users

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap.min.js"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table class="table table-striped table-hover table-bordered text-center">
        <tr class="thead-light">
            <td>用户姓名</td>
            <td>
                @Html.EditorFor(model => model.u_name)
            @Html.ValidationMessageFor(model => model.u_name)
        </td>
    </tr>
    <tr class="thead-light">
        <td>用户密码</td>
        <td>
            @Html.EditorFor(model => model.u_pwd)
        @Html.ValidationMessageFor(model => model.u_pwd)
    </td>
</tr>
<tr class="thead-light">
    <td>用户邮箱</td>
    <td>
        @Html.EditorFor(model => model.u_email)
    @Html.ValidationMessageFor(model => model.u_email)
</td>
</tr>
</table>
<p>
    <input type="submit" value="添加" />
</p>
}

<div>
    @Html.ActionLink("返回", "kuang")
</div>

