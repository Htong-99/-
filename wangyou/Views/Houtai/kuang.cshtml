    <div data-options="region:'south',border:false" style="height: 50px;padding: 1px;">
        <p style="text-align: center">版权所有@忘忧123</p>
        <p style="text-align: center">版权所有@忘忧123456</p>
    </div>

    @*左边菜单栏*@
    <div data-options="region:'west',split:true" style="width: 180px; padding: 10px;">

        <a href="#" onclick="javascript:addTab('用户列表', '/Houtai/Index')" class="list-group-item">用户列表</a>
        <br />
        <a href="#" onclick="javascript:addTab('文章列表', '/wenz/Index')" class="list-group-item">文章列表</a>
        <br />

        <a href="@Url.Action("index", "home")" class="list-group-item">返回主页</a>
    </div>


    <div data-options="region:'center'" , id="mainPanle" style="overflow: hidden;background-image:url(images/123.jpg);">
        <div id="tabs" class="easyui-tabs " fit="true" border="false" class="nav nav-tabs">
            @*<img src="~/images/123.jpg" />*@
            <div title="首页" style="text-align: center;background-image:url(images/123.jpg);">
                <h1 style="text-align: center;">欢迎使用忘忧博客后台管理系统</h1>
            </div>
        </div>
    </div>


</body>
